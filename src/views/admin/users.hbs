<!-- views/admin/users.hbs -->
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Usuarios Registrados</h2>
    <a href="/dashboard" class="btn btn-secondary">Volver al Panel</a>
    <a href ="/registerUser" class="btb btn-secondary">Crear usuario</a>
  </div>

  {{#if users.length}}
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.role}}</td>
              <td>
                <a href="/user/{{this._id}}" class="btn btn-sm btn-outline-primary">Ver Perfil</a>
                <!-- <button class="btn btn-sm btn-outline-danger">Eliminar</button> -->
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p>No se encontraron usuarios registrados.</p>
  {{/if}}
</div>