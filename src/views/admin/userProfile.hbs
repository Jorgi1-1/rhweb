<div class="container mt-5">
  <h2>Perfil del Usuario</h2>
  <div class="card mt-3 p-3">
    <p><strong>Nombre:</strong> {{user.name}}</p>
    <p><strong>Email:</strong> {{user.email}}</p>
    <p><strong>Rol:</strong> {{user.role}}</p>
    <p><strong>Grupo:</strong> {{user.group}}</p>
    <p><strong>Edad:</strong> {{user.age}}</p>
    <p><strong>Teléfono:</strong> {{user.phone}}</p>
    <p><strong>Alergias:</strong> {{user.allergies}}</p>
    <p><strong>Tipo de Sangre:</strong> {{user.bloodType}}</p>
    <p><strong>Talla de Playera:</strong> {{user.shirtSize}}</p>

    <form action="/user/{{user._id}}/delete" method="POST" onsubmit="return confirmDelete();">
      <button class="btn btn-danger mt-3" type="submit">Eliminar Usuario</button>
      <a href="/admin/users" class="btn btn-secondary mt-3">Volver</a>
    </form>
  </div>
</div>

<script>
  function confirmDelete() {
    return confirm("¿Estás seguro de que deseas eliminar este usuario?");
  }
</script>