<div class="container mt-5 animate__animated animate__fadeIn">
  <div class="text-center mb-4">
    <h2 class="fw-bold text-primary">Mi Historial de Asistencia</h2>
    <p class="text-muted">Visualiza tus entradas, salidas y horas trabajadas.</p>
  </div>

  {{#if attendanceLogs.length}}
    <div class="card shadow rounded-4 p-4">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Fecha</th>
            <th>Entrada</th>
            <th>Salida</th>
            <th>Horas trabajadas</th>
          </tr>
        </thead>
        <tbody>
          {{#each attendanceLogs}}
            <tr>
              <td>{{this.date}}</td>
              <td>{{this.checkIn}}</td>
              <td>{{this.checkOut}}</td>
              <td>{{this.hoursWorked}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info mt-4" role="alert">
      Aún no tienes registros de asistencia.
    </div>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/dashboard" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-2"></i>Volver al Panel
    </a>
  </div>
</div>

<script>
  // Animación de fadeIn para el contenedor al cargar la página
  document.querySelector('.container').classList.add('animate__animated', 'animate__fadeIn');
</script>