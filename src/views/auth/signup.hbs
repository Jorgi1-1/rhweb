<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg mt-5 custom-card rounded-4">
        <div class="card-header text-center bg-primary text-white rounded-top-4 py-4">
          <h1 class="h4 fw-bold">Registrarse</h1>
        </div>

        <div class="card-body px-4 py-4">
          {{#each errors}}
            <div class="alert alert-danger">{{text}}</div>
          {{/each}}

          <form action="/auth/signup" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="name" class="form-control" placeholder="Nombre completo" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Correo Electrónico</label>
                <input type="email" name="email" class="form-control" placeholder="ejemplo@correo.com" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control" placeholder="********" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Confirmar Contraseña</label>
                <input type="password" name="confirm_password" class="form-control" placeholder="********" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Grupo</label>
                <select name="group" class="form-control" required>
                <option value="">Selecciona un grupo</option>
                <option value="Asesoría General">Asesoría General</option>
                <option value="Asesoría Regional">Asesoría Regional</option>      
                <option value="Equipo de Cuidado del Menor">Equipo de Cuidado del Menor</option>      
                <option value="Equipo de Redes">Equipo de Redes</option>      
                <option value="12, 37">12, 37</option>
                <option value="Al Carmelo">Al-Carmelo</option>
                <option value="Al-Horeb">Al-Horeb</option>
                <option value="Al-Melek">Al-Melek</option>
                <option value="Cadés">Cadés</option>
                <option value="Calasanz">Calasanz</option>
                <option value="Combo">Combo</option>
                <option value="Cristo Sacerdote">Cristo Sacerdote</option>
                <option value="Guadalupe Madrid">Guadalupe Madrid</option>
                <option value="Horim">Horim</option>
                <option value="Huexotitla">Huexotitla</option>
                <option value="Hueyotlipan">Hueyotlipan</option>
                <option value="Juan Pablo II">Juan Pablo II</option>
                <option value="Lev Kadosh">Kháire</option>
                <option value="Lolek">Lolek</option>
                <option value="Mambré">Mambré</option>
                <option value="Maná">Maná</option>
                <option value="Mar Rojo">Mar Rojo</option>
                <option value="Meribá">Meribá</option>
                <option value="Na'i Arewa">Na'i Arewá</option>
                <option value="Nohoch aj kiin">Nohoch Aj Kiin</option>
                <option value="Raham">Raham</option>
                <option value="Ruáh">Ruáh</option>
                <option value="Sagrada Familia">Sagrada Familia</option>
                <option value="Santa Cruz">Santa Cruz</option>
                <option value="Santo Niño">Santo Niño</option>
                <option value="Sinaí">Sinaí</option>
                <option value="Tikva Almah">Tikva Almah</option>
                <option value="Xanharisi">Xanharisi</option>
                <option value="Zión">Zión</option>
                <option value="Otros">Otros</option>
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Cargo</label>
                <select name="role" class="form-control" required>
                  <option value="">Selecciona tu cargo</option>
                  <option value="Coordinador">Coordinador</option>
                  <option value="Subcoordinador">Subcoordinador</option>
                  <option value="Asesor General">Asesor General</option>
                  <option value="Asesor Regional">Asesor Regional</option>
                  <option value="Asesor Laico">Asesor Laico</option>
                  <option value="Asesor Religioso">Asesor Religioso</option>
                  <option value="Equipo de Cuidado del Menor">Equipo de Cuidado del Menor</option>
                  <option value="Otro">Otro</option>
                </select>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Edad</label>
                <input type="number" name="age" class="form-control" placeholder="Edad" required>
              </div>
              
              <div class="col-md-6 mb-3">
                <label class="form-label">Teléfono</label>
                <input type="tel" name="phone" class="form-control" placeholder="Número de contacto" required pattern="[0-9]+" maxlength="10" title="Solo se permiten números">
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Alergias</label>
                <input type="text" name="allergies" class="form-control" placeholder="Especifica si tienes alergias" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Tipo de Sangre</label>
                <input type="text" name="bloodType" class="form-control" placeholder="Ej. O+, A-, etc." required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Talla de Playera</label>
                <select name="shirtSize" class="form-control" required>
                  <option value="">Selecciona tu talla</option>
                  <option value="XS">XS</option>
                  <option value="S">S</option>
                  <option value="M">M</option>
                  <option value="L">L</option>
                  <option value="XL">XL</option>
                  <option value="XXL">XXL</option>
                </select>
              </div>

              <h5 class="mt-4 fw-bold text-primary">Contacto de Emergencia</h5>

              <div class="col-md-6 mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="emergency_name" class="form-control" placeholder="Nombre del contacto" required>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label">Teléfono</label>
                <input type="tel" name="emergency_phone" class="form-control" placeholder="Teléfono del contacto" required pattern="[0-9]{10}" maxlength="10" title="Ingrese un número de 10 dígitos">
              </div>


            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg fw-bold">Registrarse</button>
            </div>
          </form>
        </div>

        <div class="text-center my-3">
          <p class="text-muted">¿Ya tienes una cuenta? 
            <a href="/auth/signin" class="text-primary fw-bold">Inicia sesión</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>