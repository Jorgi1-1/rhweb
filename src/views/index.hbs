<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card card-body p-5 mt-4">

        <!-- Logo en el encabezado superior -->
        <div class="text-center mb-4">
          <img 
            src="/img/logo.png" 
            alt="Logo sitio" 
            style="max-width: 120px; height: auto;"
          />
        </div>

        <h1 class="display-4 text-center">RHWeb</h1>
        <p class="lead text-center">Bienvenido a tu sistema de gestión de empleados.</p>
        <hr class="my-4" />
        
        <p class="fw-bold text-center">
          <span style="color: #8C1C13;">Inicia sesión para continuar.</span>
        </p>

        <div class="mt-2 text-center">
          {{#if user}}  
            <a class="btn btn-primary btn-sm" href="/dashboard" role="button">Dashboard</a>
          {{else}}
            <a class="btn btn-secondary btn-sm" href="/auth/signin" role="button">Iniciar sesión</a>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>
