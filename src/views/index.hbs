<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card card-body p-5 mt-4 shadow-lg rounded-4 animate__animated animate__fadeIn">

        <!-- Logo en el encabezado superior -->
        <div class="text-center mb-4">
          <img 
            src="/img/logo.png" 
            alt="Logo sitio" 
            style="max-width: 120px; height: auto;"
            class="img-fluid"
          />
        </div>

        <h1 class="display-4 text-center fw-bold text-primary">RHWeb</h1>
        <p class="lead text-center">Bienvenido a tu sistema de gestión de empleados.</p>
        <hr class="my-4" />

        {{#if user}}  
          <p class="text-center fw-semibold text-success">Accede al panel para gestionar tu equipo.</p>
          <div class="mt-3 text-center">
            <a class="btn btn-primary btn-lg px-4" href="/dashboard" role="button">
              Ir al Dashboard
            </a>
          </div>
        {{else}}
          <p class="fw-bold text-center text-danger">Inicia sesión para continuar.</p>
          <div class="mt-3 text-center">
            <a class="btn btn-secondary btn-lg px-4" href="/auth/signin" role="button">
              Iniciar sesión
            </a>
          </div>
        {{/if}}

      </div>
    </div>
  </div>
</div>

<!-- Animate.css para animaciones -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>